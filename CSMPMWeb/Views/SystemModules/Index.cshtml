@model IEnumerable<CSMPMWeb.Models.SystemModule>

@{
    ViewData["Title"] = "Модули";
}

<h1>Модули системы</h1>

<p>
    <a asp-action="Edit" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SystemModuleName)
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SystemModuleName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SystemModuleId" class="btn btn-primary">Редактировать</a>                 
                <a asp-action="Delete" asp-route-id="@item.SystemModuleId" class="btn btn-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
