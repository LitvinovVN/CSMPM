@model CSMPMWeb.Models.SystemModule

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактирование модуля системы</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SystemModuleId" />
            <div class="form-group">
                <label asp-for="SystemModuleName" class="control-label"></label>
                <input asp-for="SystemModuleName" class="form-control" />
                <span asp-validation-for="SystemModuleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>
