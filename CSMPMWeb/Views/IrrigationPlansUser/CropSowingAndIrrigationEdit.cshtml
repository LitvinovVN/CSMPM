@model CSMPMLib.IrrigationPlanItem_CropSowingAndIrrigation

@{
    ViewData["Title"] = "CropSowingAndIrrigationCreate";
}

<h1>Редактирование площадей посева, полива</h1>

<h4>@Model.IrrigationPlanItem.IrrigationPlan.OrganizationDocumentationPlans.OrganizationDocumentation.Organization.OrganizationName</h4>
<h4>@Model.IrrigationPlanItem.IrrigationPlan.Year</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CropSowingAndIrrigationEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="CropId" class="control-label"></label>
                <select asp-for="CropId" class ="form-control" asp-items="ViewBag.Crops"></select>
            </div>
            <div class="form-group">
                <label asp-for="Sowing" class="control-label"></label>
                <input asp-for="Sowing" class="form-control" />
                <span asp-validation-for="Sowing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Irrigation" class="control-label"></label>
                <input asp-for="Irrigation" class="form-control" />
                <span asp-validation-for="Irrigation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="IrrigationPlanItemId" />
                <input type="hidden" asp-for="IrrigationPlanItem_CropSowingAndIrrigationId" />
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="CropSowingAndIrrigations" asp-route-irrigationPlanItemId="@Model.IrrigationPlanItemId" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>
