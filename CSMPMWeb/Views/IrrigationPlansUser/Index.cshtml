@model IEnumerable<CSMPMLib.IrrigationPlan>

@{
    ViewData["Title"] = "Планы поливов";
}

<h1>Планы поливов</h1>

<p>
    <a asp-action="Edit" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrganizationDocumentationPlans.OrganizationDocumentation.Organization.OrganizationName)
            </th>
            <th>Разделы плана</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationDocumentationPlans.OrganizationDocumentation.Organization.OrganizationName)
            </td>
            <td>
                <a asp-action="IrrigationPlanItems" asp-route-irrigationPlanId="@item.IrrigationPlanId">Содержимое плана</a>               
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IrrigationPlanId">Редактировать</a> |                
                <a asp-action="Delete" asp-route-id="@item.IrrigationPlanId" class="text-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
