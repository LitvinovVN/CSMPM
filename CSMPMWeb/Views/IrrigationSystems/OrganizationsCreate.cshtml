@model CSMPMLib.OrganizationToTypeOfActivitiesToIrrigationSystem

@{
    ViewData["Title"] = "Добавление";
}

<h1>Добавление взаимодействия с организациями</h1>

<h4>@Model.IrrigationSystem.IrrigationSystemName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="OrganizationsCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IrrigationSystemId" />
            <div class="form-group">
                <label asp-for="OrganizationToTypeOfActivity.OrganizationId" class="control-label"></label>
                <select asp-for="OrganizationToTypeOfActivity.OrganizationId" class="form-control" asp-items="ViewBag.Organizations"></select>
                <span asp-validation-for="IrrigationSystemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizationToTypeOfActivity.TypeOfActivityId" class="control-label">Тип деятельности</label>
                <select asp-for="OrganizationToTypeOfActivity.TypeOfActivityId" class="form-control" asp-items="ViewBag.TypeOfActivities"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Organizations" asp-route-id="@Model.IrrigationSystemId" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>
