@model IEnumerable<CSMPMLib.CropGroup>

@{
    ViewData["Title"] = "Index";
}

<h1>Группы с/х культур</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CropGroupName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CropGroupName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CropGroupId" class="btn btn-primary">Редактировать</a>                
                <a asp-action="Delete" asp-route-id="@item.CropGroupId" class="btn btn-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
