@model CSMPMLib.Crop

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактирование с/х культуры</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CropId" />
            <div class="form-group">
                <label asp-for="CropName" class="control-label"></label>
                <input asp-for="CropName" class="form-control" />
                <span asp-validation-for="CropName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WateringRate" class="control-label"></label>
                <input asp-for="WateringRate" class="form-control" />
                <span asp-validation-for="WateringRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IrrigationRate" class="control-label"></label>
                <input asp-for="IrrigationRate" class="form-control" />
                <span asp-validation-for="IrrigationRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CropGroupId" class="control-label"></label>
                <select asp-for="CropGroupId" class="form-control" asp-items="ViewBag.CropGroups"></select>
                <span asp-validation-for="CropGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

