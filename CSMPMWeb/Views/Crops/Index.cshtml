@model IEnumerable<CSMPMLib.Crop>

@{
    ViewData["Title"] = "Index";
}

<h1>С/х культуры</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CropName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WateringRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IrrigationRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CropGroup)
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CropName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WateringRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IrrigationRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CropGroup.CropGroupName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CropId" class="btn btn-primary">Редактировать</a>                
                <a asp-action="Delete" asp-route-id="@item.CropId" class="btn btn-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
