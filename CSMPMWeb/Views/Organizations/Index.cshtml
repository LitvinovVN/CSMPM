@model IEnumerable<CSMPMLib.Organization>

@{
    ViewData["Title"] = "Организации";
}

<h1>Организации</h1>

<p>
    <a asp-action="Edit" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrganizationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentOrganizationId)
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentOrganization.OrganizationName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrganizationId" class="btn btn-primary">Редактировать</a>                
                <a asp-action="Delete" asp-route-id="@item.OrganizationId" class="btn btn-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
