@model IEnumerable<CSMPMLib.Organization>

@{
    ViewData["Title"] = "Организации";
}

<h1>Организации</h1>

<p>
    <a asp-action="Edit" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrganizationName)
            </th>
            <th>
                Модули
            </th>
            <th>
                Пользователи
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationName)

                @if (item.ParentOrganizationId != null && item.ParentOrganization != null)
                {
                    <br>
                    <text>(головная организация: @item.ParentOrganization.OrganizationName)</text>
                }
            </td>
            <td>
                <a asp-action="SystemModules" asp-route-id="@item.OrganizationId" class="btn btn-primary">Модули</a>
            </td>
            <td>
                <a asp-action="AppUsers" asp-route-id="@item.OrganizationId" class="btn btn-primary">Пользователи</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrganizationId" class="btn btn-primary">Редактировать</a>

                <a asp-action="Delete" asp-route-id="@item.OrganizationId" class="btn btn-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
