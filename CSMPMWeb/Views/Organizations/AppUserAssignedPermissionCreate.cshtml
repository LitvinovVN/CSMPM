@model CSMPMWeb.Models.AssignedPermission

@{
    ViewData["Title"] = "Назначение роли";
}

<h1>Назначение пользователю новой роли</h1>
<h4>@Model.AppUserToOrganization.Organization.OrganizationName</h4>
<h4>@Model.AppUserToOrganization.AppUser.GetFullName</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AppUserAssignedPermissionCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="OrganizationToSystemModuleId" class="control-label">Модуль</label>
                <select asp-for="OrganizationToSystemModuleId" class ="form-control" asp-items="ViewBag.OrganizationToSystemModules"></select>
            </div>
            <div class="form-group">
                <label asp-for="SystemRoleId" class="control-label"></label>
                <select asp-for="SystemRoleId" class ="form-control" asp-items="ViewBag.SystemRoles"></select>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="AppUserToOrganizationId" />
                <input type="submit" value="Добавить" class="btn btn-primary" />
                <a asp-action="AppUserAssignedPermissions" asp-route-appUserToOrganizationId="@Model.AppUserToOrganizationId" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>