@model CSMPMWeb.Models.AppUserToOrganization

@{
    ViewData["Title"] = "BindAppUserToOrganizationBindExistingAppUser";
}

<h1>Добавление зарегистрированного пользователя в организацию</h1>

<h4>@Model.Organization.OrganizationName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BindAppUserToOrganizationBindExistingAppUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="AppUserId" class="control-label"></label>
                <select asp-for="AppUserId" class ="form-control" asp-items="ViewBag.AppUsers"></select>
            </div>            
            <div class="form-group">
                <input type="hidden" asp-for="OrganizationId" />
                <input type="submit" value="Добавить" class="btn btn-primary" />
                <a asp-action="AppUsers" asp-route-id="@Model.OrganizationId" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>